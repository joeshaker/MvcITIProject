@model MvcITIProject.ModelView.FloorViewModel

@{
    ViewData["Title"] = "Delete Floor";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Delete Floor
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Warning!</strong> Are you sure you want to delete this floor? This action cannot be undone.
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="detail-item mb-3">
                                <dt class="text-muted">@Html.DisplayNameFor(model => model.Number)</dt>
                                <dd class="h5">
                                    <span class="badge bg-primary fs-6">Floor @Html.DisplayFor(model => model.Number)</span>
                                </dd>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="detail-item mb-3">
                                <dt class="text-muted">@Html.DisplayNameFor(model => model.NumBlocks)</dt>
                                <dd class="h5">
                                    <i class="fas fa-cube me-2 text-info"></i>@Html.DisplayFor(model => model.NumBlocks) blocks
                                </dd>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="detail-item mb-3">
                                <dt class="text-muted">@Html.DisplayNameFor(model => model.HiringDate)</dt>
                                <dd class="h5">
                                    @if (Model.HiringDate.HasValue)
                                    {
                                        <i class="fas fa-calendar me-2 text-success"></i>@Model.HiringDate.Value.ToString("MMMM dd, yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">
                                            <i class="fas fa-calendar-times me-2"></i>Not set
                                        </span>
                                    }
                                </dd>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="detail-item mb-3">
                                <dt class="text-muted">@Html.DisplayNameFor(model => model.ShelvesCount)</dt>
                                <dd class="h5">
                                    <span class="badge bg-info fs-6">
                                        <i class="fas fa-layer-group me-1"></i>@Html.DisplayFor(model => model.ShelvesCount) shelves
                                    </span>
                                </dd>
                            </div>
                        </div>
                    </div>

                    @if (Model.ShelvesCount > 0)
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            <strong>Important:</strong> This floor has @Model.ShelvesCount associated shelves. 
                            Deleting this floor may affect related data.
                        </div>
                    }

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Number" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Back to List
                            </a>
                            <div>
                                <a asp-action="Details" asp-route-id="@Model.Number" class="btn btn-info me-2">
                                    <i class="fas fa-eye me-1"></i>View Details
                                </a>
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash me-1"></i>Delete Floor
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>