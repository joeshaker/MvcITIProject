@model MvcITIProject.ModelView.FloorEditViewModel

@{
    ViewData["Title"] = "Edit Floor";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-edit me-2"></i>Edit Floor @Model.Number
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <input asp-for="Number" type="hidden" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Floor Number</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-hashtag"></i>
                                        </span>
                                        <input value="@Model.Number" class="form-control" readonly />
                                    </div>
                                    <div class="form-text">Floor number cannot be changed</div>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="NumBlocks" class="form-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-cube"></i>
                                        </span>
                                        <input asp-for="NumBlocks" class="form-control" placeholder="Enter number of blocks" />
                                    </div>
                                    <span asp-validation-for="NumBlocks" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="HiringDate" class="form-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fas fa-calendar"></i>
                                        </span>
                                        <input asp-for="HiringDate" class="form-control" type="date" />
                                    </div>
                                    <span asp-validation-for="HiringDate" class="text-danger"></span>
                                    <div class="form-text">Optional: Leave blank if not applicable</div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <div>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left me-1"></i>Back to List
                                </a>
                                <a asp-action="Details" asp-route-id="@Model.Number" class="btn btn-info">
                                    <i class="fas fa-eye me-1"></i>View Details
                                </a>
                            </div>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save me-1"></i>Update Floor
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}