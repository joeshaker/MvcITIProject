@model List<MvcITIProject.ModelView.BookModelView>

@{
    ViewData["Title"] = "Books List";
}

<div class="container py-4 mb-4">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h2 class="fw-bold text-primary mb-0">Library Books</h2>
        <a asp-action="Add" class="btn btn-success px-4">
            <i class="bi bi-plus-circle me-1"></i> Add New Book
        </a>
    </div>
    <form asp-action="Index" method="get" class="mb-3 d-flex">
        <input type="text" name="searchTerm" class="form-control me-2"
               value="@ViewBag.SearchTerm" placeholder="Search by title..." />
        <button type="submit" class="btn btn-primary">Search</button>
    </form>


    <div class="table-responsive shadow rounded">
        <table class="table table-hover align-middle text-center mb-2">
            <thead class="table-primary">
                <tr>
                    <th scope="col">📘 Title</th>
                    <th scope="col">📚 Category</th>
                    <th scope="col">🏢 Publisher</th>
                    <th scope="col">📌 Shelf</th>
                    <th scope="col" style="width: 220px;">⚙️ Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Title)</td>
                            <td>@(item.Cat?.CatName )</td>
                            <td>@(item.Publisher?.Name)</td>
                            <td>@(item.ShelfCodeNavigation?.Code )</td>
                            <td>
                                <div class="d-flex justify-content-center">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning me-2">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-2">
                                        <i class="bi bi-eye"></i> Details
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-muted">No books found.</td>
                    </tr>
                }
            </tbody>
        </table>
        <nav>
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { pageNumber = i })">@i</a>
                    </li>
                }
            </ul>
        </nav>

    </div>
</div>
