@model MvcITIProject.Models.Book

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Book</h1>

<h4 class="text-danger">Are you sure you want to delete this book?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-3">ID</dt>
    <dd class="col-sm-9">@Model.Id</dd>

    <dt class="col-sm-3">Title</dt>
    <dd class="col-sm-9">@Model.Title</dd>

    <dt class="col-sm-3">Category</dt>
    <dd class="col-sm-9">@Model.Cat?.CatName</dd>

    <dt class="col-sm-3">Publisher</dt>
    <dd class="col-sm-9">@Model.Publisher?.Name</dd>

    <dt class="col-sm-3">Shelf</dt>
    <dd class="col-sm-9">@Model.ShelfCodeNavigation?.Code</dd>
</dl>

<form asp-action="DeleteConfirm" asp-route-id="@Model.Id" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash-alt"></i> Delete
    </button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
