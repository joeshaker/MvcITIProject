@model MvcITIProject.ModelView.BookModelView

@{
    ViewData["Title"] = "Book Details";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow rounded">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="bi bi-info-circle me-2"></i>Book Details</h4>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 fw-semibold text-muted">ID</dt>
                        <dd class="col-sm-8">@Model.Id</dd>

                        <dt class="col-sm-4 fw-semibold text-muted">Title</dt>
                        <dd class="col-sm-8">@Model.Title</dd>

                        <dt class="col-sm-4 fw-semibold text-muted">Category</dt>
                        <dd class="col-sm-8">@Model.Cat?.CatName</dd>

                        <dt class="col-sm-4 fw-semibold text-muted">Publisher</dt>
                        <dd class="col-sm-8">@Model.Publisher?.Name</dd>

                        <dt class="col-sm-4 fw-semibold text-muted">Shelf Code</dt>
                        <dd class="col-sm-8">@Model.ShelfCodeNavigation?.Code</dd>
                    </dl>
                </div>
                <div class="card-footer d-flex justify-content-end gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="bi bi-pencil-square me-1"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-1"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
