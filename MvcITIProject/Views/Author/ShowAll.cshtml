@model List<Author>

<h2>All Authors</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Books Count</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>@author.Id</td>
                <td>@author.Name</td>
                <td>@(author.Books?.Count ?? 0)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@author.Id" class="btn btn-info btn-sm">
                        Details
                    </a>
                    <a asp-action="Delete" asp-route-id="@author.Id" class="btn btn-danger btn-sm">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="AddView" class="btn btn-primary">Add New Author</a>