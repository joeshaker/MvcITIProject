@model List<PublisherModelView>
@using MvcITIProject.ModelView
@using MvcITIProject.Models


@{
    ViewData["Title"] = "Publishers";
    var searchString = ViewBag.SearchString as string;
    var pageNumber = (int)ViewBag.PageNumber;
    var totalPages = (int)ViewBag.TotalPages;
}

<div class="container mt-2">
    <h1>Publishers</h1>

    <!-- Search Form -->
    <form asp-action="Index" method="get" class="mb-4">
        <div class="row">
            <div class="col-md-6">
                <div class="input-group">
                    <input type="text" name="searchString" value="@searchString" class="form-control" placeholder="Search by Publisher name..." />
                    <button type="submit" class="btn btn-primary">Search</button>
                    @if (!string.IsNullOrEmpty(searchString))
                    {
                        <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
                    }
                </div>
            </div>
            <div class="col-md-6 text-end">
                <a asp-action="Create" class="btn btn-success">Create New</a>
            </div>
        </div>
    </form>

    <!-- Categories Table -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Publihser Name</th>
                    <th>Number of Books</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.BookCount</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center">No Publishers found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    @if (totalPages > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item @(pageNumber == 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(pageNumber - 1)"
                       asp-route-searchString="@searchString">Previous</a>
                </li>

                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == pageNumber ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@i"
                           asp-route-searchString="@searchString">@i</a>
                    </li>
                }

                <li class="page-item @(pageNumber == totalPages ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(pageNumber + 1)"
                       asp-route-searchString="@searchString">Next</a>
                </li>
            </ul>
        </nav>
    }
</div>

